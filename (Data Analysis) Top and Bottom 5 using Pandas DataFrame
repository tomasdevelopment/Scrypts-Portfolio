import pandas as pd

# Load the data
google = pd.read_csv('CSV/google_stock_price.csv')

# Get the top and bottom 5 rows based on Price
top5 = google.nlargest(5, 'Price')
bottom5 = google.nsmallest(5, 'Price')

# Reset the index if you want to keep the data aligned correctly
top5.reset_index(drop=True, inplace=True)
bottom5.reset_index(drop=True, inplace=True)

# Create a DataFrame with the top and bottom 5 prices side by side
topandbottom = pd.DataFrame({
    "Top5 Prices": top5['Price'],
    "Bottom5 Prices": bottom5['Price']
})

print(topandbottom)



