def check_if_number(number):
    if isinstance(number, (int, float, complex)):
        print('is a number')
        return number
        
    elif isinstance(number, str):
        if number.lower() == 'j':
            print('The imaginary J unit try another number')
            return None
        else:
            try:
                complex_number = complex(number)
                print('is a number')
                return number
            except ValueError:
                print("Input data cannot be represented as a number")
                return None
    else:
        print("Input data cannot be represented as a number")
        return None

def check_if_str(number):
    if isinstance(number, (int, float, complex)):
        print('is a number')
        return None
    if number == '':
        print('its empty try again')
        return None
    elif isinstance(number, str):
        if number.lower() == 'j':
            print('The imaginary J unit is cinsidered a string')
            return number
        else:
            try:
                complex_number = complex(number)
                print('is a number')
                return None
            except ValueError:
                print("Input data can be represented as a String")
                return number
    else:
        print("Input data can be represented as a string")
        return number
# Example usage:
input_value = input("Enter a String: ")

while input_value.lower() not in ['stop', 'para']:
    result = check_if_str(input_value)
    print(f"The input {input_value} {result}")
    if result is None:
        input_value = input("Enter a String : ")
    else:
        break

print("Exiting the program.")

input_valuen = input("Enter a number: ")

while input_valuen.lower() not in ['stop', 'para']:
    result = check_if_number(input_valuen)
    print(f"The input {input_value} {result}")
    if result is None:
        input_valuen = input("Enter a Number: ")
    else:
        break

print("Exiting the program.")
